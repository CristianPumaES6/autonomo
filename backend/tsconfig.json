{
    "compilerOptions": {
        "module": "commonjs",

        "strictNullChecks": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,

        "removeComments": true,
        "declaration": false,
        "sourceMap": false,

        "target": "es6",
        "outDir": "./dist",
        "baseUrl": "./"
    },
    "exclude": ["node_modules"]
}